{
  "name": "title-22-game",
  "version": "0.2.0",
  "devDependencies": {
    "@types/fs-extra": "^8.0.0",
    "awesome-typescript-loader": "^5.2.1",
    "http-server": "^0.11.1",
    "ts-loader": "6.0.4",
    "tsconfig-paths-webpack-plugin": "^3.2.0",
    "typescript": "3.5.2",
    "webpack": "4.35.2",
    "webpack-cli": "3.3.5"
  },
  "scripts": {
    "init": "sh symlinks.sh",
    "dev": "webpack --mode development -w --script",
    "sass-editor": "sass editor/scss/main.scss editor/assets/css/editor.css",
    "sass-game": "sass game/scss/main.scss game/assets/css/main.css",
    "sass": "npm run sass-game && npm run sass-editor",
    "build": "webpack --mode production --script",
    "game": "http-server ./game -p 8080 -c-1",
    "editor": "node editor-server/main.js",
    "reset-editor": "rm -rf editor-assets && mkdir -p editor-assets/data editor-assets/images"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/digitsensitive/phaser3-typescript.git"
  },
  "dependencies": {
    "fs-extra": "^8.1.0",
    "nanomorph": "^5.4.0"
  }
}
