{
  "name": "title-22-game",
  "version": "1.0.0",
  "devDependencies": {
    "awesome-typescript-loader": "^5.2.1",
    "http-server": "^0.11.1",
    "ts-loader": "6.0.4",
    "tsconfig-paths-webpack-plugin": "^3.2.0",
    "typescript": "3.5.2",
    "webpack": "4.35.2",
    "webpack-cli": "3.3.5"
  },
  "scripts": {
    "init": "sh symlinks.sh",
    "dev-editor": "webpack --mode development -w --script editor",
    "dev-game": "webpack --mode development -w --script game",
    "sass-editor": "sass editor/scss/main.scss editor/assets/css/editor.css",
    "sass-game": "sass game/scss/main.scss game/assets/css/main.css",
    "sass": "npm run sass-game && npm run sass-editor",
    "build": "webpack --mode production --script game",
    "game": "http-server ./game -p 8080 -c-1",
    "editor": "http-server ./editor -p 8080 -c-1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/digitsensitive/phaser3-typescript.git"
  }
}
